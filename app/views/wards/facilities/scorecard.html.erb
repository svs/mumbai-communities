<turbo-frame id="facilities-scorecard">
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <%
      # Build per-type counts from @type_counts (grouped by [facility_type, source])
      type_summary = {}
      @type_counts.each do |(ftype, source), count|
        type_summary[ftype] ||= { bmc: 0, osm: 0 }
        if source.start_with?("bmc")
          type_summary[ftype][:bmc] += count
        else
          type_summary[ftype][:osm] += count
        end
      end
    %>

    <% type_summary.sort_by { |k, _| k }.each do |facility_type, counts| %>
      <div class="bg-white border border-stone-200 rounded-lg p-4">
        <div class="text-xs uppercase tracking-wider text-stone-400 mb-2"><%= facility_type.humanize %></div>
        <div class="flex items-end gap-3">
          <div>
            <div class="text-2xl font-bold text-stone-800"><%= counts[:osm] %></div>
            <div class="text-xs text-green-600">OSM</div>
          </div>
          <div>
            <div class="text-2xl font-bold text-stone-800"><%= counts[:bmc] %></div>
            <div class="text-xs text-blue-600">BMC</div>
          </div>
        </div>
        <% gap = counts[:osm] - counts[:bmc] %>
        <% if gap != 0 %>
          <div class="text-xs mt-2 <%= gap > 0 ? 'text-green-600' : 'text-red-600' %>">
            <%= gap > 0 ? "+#{gap} OSM" : "#{gap.abs} missing from OSM" %>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if type_summary.empty? %>
      <div class="col-span-full text-sm text-stone-400 italic">No facility data available yet.</div>
    <% end %>
  </div>
</turbo-frame>
