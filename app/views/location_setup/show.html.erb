                          data: {
                            "places-autocomplete-target": "input",
                            "autocomplete": "off"
                          } %>

          <!-- Hidden fields for coordinates and formatted address -->
          <%= f.hidden_field :latitude, data: { "places-autocomplete-target": "hiddenLat" } %>
          <%= f.hidden_field :longitude, data: { "places-autocomplete-target": "hiddenLng" } %>
          <%= f.hidden_field :formatted_address, data: { "places-autocomplete-target": "hiddenFormattedAddress" } %>
        </div>

